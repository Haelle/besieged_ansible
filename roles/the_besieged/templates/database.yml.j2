{{ rails_env }}:
  default: &default
  adapter: postgresql
  encoding: unicode
  host: localhost
  pool: <%= ENV.fetch("RAILS_MAX_THREADS") { 5 } %>
  timeout: 5000
  username: '{{ app_name }}'
  database: '{{ app_name }}'
  password: <%= Rails.application.credentials.db_password_{{ rails_env }} %>
